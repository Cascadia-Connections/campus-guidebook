@model CampusGuidebook.ViewModels.EventViewModel;
@addTagHelper "*, Microsoft.aspNetCore.Mvc.TagHelpers"
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>

<h1>Pending Event</h1>

<table class="table-bordered">
    <thead>
          <tr>
            <th scope="col">Event Name</th>
            <th scope="col">Description</th>
            <th scope="col">Location</th>
            <th scope="col">ImgUri</th>
            <th scope="col">Longitude</th>
            <th scope="col">Latitude</th>
            <th scope="col">LastUpdated</tscope>
            <th scope="col">UploadStatus</th>
          </tr>
     </thead>
     <tbody>
          <tr>
                
                <th scope="row">@Model.Name</th>
                <td>@Model.Description</td>
                <td>@Model.Location</td>
                <td><a href="@Model.ImgUri">@Model.ImgUri</a></td>
                <td>@Model.Longitude</td>
                <td>@Model.Latitude</td>
                <td>@Model.LastUpdated</td>
                <td>@Model.UploadStatus</td>
          </tr>
      </tbody>
</table>


<form asp-controller="Home" asp-action="EventResponse" method="Post">

    <div hidden="true">
    <input asp-for= "id" value=@Model.id>
    <input asp-for= "Name" value=@Model.Name>
    <input asp-for= "Description" value=@Model.Description>
    <input asp-for= "Location" value=@Model.Location>
    <input asp-for= "ImgUri" value=@Model.ImgUri>
    <input asp-for= "Longitude" value=@Model.Longitude>
    <input asp-for= "Latitude" value=@Model.Latitude>
    <input asp-for= "LastUpdated" value=@Model.LastUpdated>
    </div>

    <div class="row">
        <h2 class="col-12 text-center mt-5">Approve or reject the Event</h2>
        

           
            <div class="row justify-content-center">
             <label class="col-2 justify-content-end" asp-for="UploadStatus">Event Decision?:</label>
            <select class="col-2 align-content-center" id="isRejected" asp-for="UploadStatus">
                <option value=1>Approve</option>
                <option value=2>Reject</option>
            </select>
            </div>
            <div class="row mt-3">
            <label class="col-5" id="RejectionLabel" hidden="true">Why is this event being rejected?</label>
            <textarea class="col-5"id="RejectionReason" hidden ="true"></textarea>
              </div>
              <div class="row mt-3">
             <label class = "col-5" id="ConditionsLabel" hidden="true">What needs to be changed?</label>
            <textarea class = "col-5"id="ConditionsReason" hidden ="true"></textarea>
            </div>
    </div>

    <button class="" type="submit" asp-controller="Home" asp-action="EventResponse">Submit</button>
</form>






<script type="text/javascript" src="~/js/EventResponseAjax.js"></script>
</body>